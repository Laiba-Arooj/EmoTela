<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".settings">


    <TextView
        android:id="@+id/profiletitle"
        android:layout_width="373dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:fontFamily="monospace"
        android:text="Your Profile"
        android:textAlignment="center"
        android:textColor="@color/Twit"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:id="@+id/nametitle"
        android:layout_width="92dp"
        android:layout_height="41dp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:fontFamily="monospace"
        android:text="Name"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.122"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profiletitle" />

    <TextView
        android:id="@+id/enteredname"
        android:layout_width="293dp"
        android:layout_height="60dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/rounded_shape"
        android:backgroundTint="@color/Twit"
        android:fontFamily="monospace"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.338"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nametitle" />

    <TextView
        android:id="@+id/emailtitle"
        android:layout_width="131dp"
        android:layout_height="44dp"

        android:layout_marginTop="32dp"
        android:ems="10"
        android:fontFamily="monospace"
        android:text="Email"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.167"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enteredname" />

    <TextView
        android:id="@+id/enteredemail"
        android:layout_width="293dp"
        android:layout_height="60dp"
        android:background="@drawable/rounded_shape"
        android:backgroundTint="@color/Twit"
        android:ems="10"
        android:fontFamily="monospace"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.33"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailtitle"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/clickedit"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_marginTop="112dp"
        android:background="@color/white"
        android:src="@drawable/ic_edit_tools_and_utensils_svgrepo_com"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.255"
        app:layout_constraintStart_toEndOf="@+id/enteredname"
        app:layout_constraintTop_toBottomOf="@+id/profiletitle" />

    <Button
        android:id="@+id/logoutbtn"
        android:layout_width="98dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_style"
        android:fontFamily="monospace"
        android:text="Logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enteredemail" />


</androidx.constraintlayout.widget.ConstraintLayout>